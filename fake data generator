import pandas as pd
import numpy as np

# Parameters
num_days = 15  # number of days of data
num_dealers = 5  # number of dealers
num_tickers = 3  # number of tickers
rows_per_day = num_dealers * num_tickers

# Generate date range
dates = pd.date_range(end=pd.Timestamp.today(), periods=num_days)

# Dealer and ticker names
dealers = [f"Dealer_{i}" for i in range(1, num_dealers + 1)]
tickers = ['AAPL', 'MSFT', 'GOOG']

# Create synthetic dataset
data_list = []
for date in dates:
    for dealer in dealers:
        for ticker in tickers:
            ask = np.round(np.random.uniform(100, 150), 2)
            bid = ask - np.random.uniform(0.5, 2.0)
            traded = np.random.choice([0, np.round(np.random.uniform(bid, ask), 2)], p=[0.6, 0.4])  # 40% trades
            implied_financing = np.round(np.random.uniform(30, 45), 2)
            amount = np.random.randint(50, 500) if traded != 0 else 0
            dealer_ticker_combo = f"{dealer}_{ticker}"

            data_list.append([date, dealer, ticker, implied_financing, traded, ask, bid, amount, dealer_ticker_combo])

# Create DataFrame
fake_data = pd.DataFrame(data_list, columns=[
    'date', 'room_name', 'ticker', 'implied_financing_traded', 'traded', 'ask', 'bid', 'amount', 'dealer_ticker_combo'
])

print(fake_data.head())
